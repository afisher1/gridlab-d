if (GLD_CI_BUILD)
    set(CMAKE_C_COMPILER_SANITIZED "gcc")
    set(CMAKE_CXX_COMPILER_SANITIZED "g++")
elseif (MSYS OR MINGW)
    string(REGEX REPLACE "(.):/" "/\\1/" CMAKE_C_COMPILER_SANITIZED "${CMAKE_C_COMPILER}")
    string(REGEX REPLACE "(.):/" "/\\1/" CMAKE_CXX_COMPILER_SANITIZED "${CMAKE_CXX_COMPILER}")
else ()
    set(CMAKE_C_COMPILER_SANITIZED ${CMAKE_C_COMPILER})
    set(CMAKE_CXX_COMPILER_SANITIZED ${CMAKE_CXX_COMPILER})
endif ()
